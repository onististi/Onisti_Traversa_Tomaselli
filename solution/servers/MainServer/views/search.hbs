<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{#if user}}
        <meta name="user-id" content="{{user.id}}">
        <meta name="user-role" content="{{user.role}}">
        <meta name="user-status" content="{{user.requestStatus}}">
    {{/if}}
    <title>{{title}}</title>
    <link rel="stylesheet" href="/stylesheets/HomepageStyle.css">
    <link rel="stylesheet" href="/stylesheets/SearchStyle.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="/javascripts/socketManager.js"></script>
</head>
<body>
{{> header}}

<main class="search-results-container">
    {{#if searchTerm}}
        {{#if hasResults}}

            <div class="search-results">
                {{#if (eq searchType 'all')}}
                    {{#if movies.length}}
                        <section class="movie-results">
                            <h2>Movies ({{movies.length}})</h2>
                            <div class="movie-grid">
                                {{#each movies}}
                                    <div class="movie-card" data-movie-id="{{id}}">
                                        <a href="/movies/:{{id}}">
                                            <div class="movie-poster">
                                                <img class="posterlink" src="{{posterLink}}" alt="{{name}}" onerror="this.style.display='none'">
                                            </div>
                                            <h3 class="movie-name">{{name}}</h3>
                                            <div class="movie-meta">
                                                <div class="rating">average rating: {{rating}}</div>
                                                <div class="genres">{{genres}}</div>
                                            </div>
                                        </a>
                                    </div>
                                {{/each}}
                            </div>
                        </section>
                    {{/if}}

                    {{#if actors.length}}
                        <section class="actor-results">
                            <h2>Actors ({{actors.length}})</h2>
                            <div class="actor-grid">
                                {{#each actors}}
                                    <div class="actor-card" data-actor-name="{{name}}">
                                        <a href="/actors/{{name}}">
                                            <div class="actor-image">
                                                <img onerror="this.style.display='none'" src="/images/default-actor.jpg">
                                            </div>
                                            <h3 class="actor-name">{{name}}</h3>
                                            <div class="actor-meta">
                                                <div class="avg_rating">average rating: {{avg_rating}}</div>
                                            </div>
                                        </a>
                                    </div>
                                {{/each}}
                            </div>
                        </section>
                    {{/if}}
                {{else if (eq searchType 'movies')}}
                    <section class="movie-results">
                        <h2>Movies ({{movies.length}})</h2>
                        <div class="movie-grid">
                            {{#each movies}}
                                <div class="movie-card" data-movie-id="{{id}}">
                                    <a href="/movies/:{{id}}">
                                        <div class="movie-poster">
                                            <img class="posterlink" src="{{posterLink}}" alt="{{name}}" onerror="this.style.display='none'">
                                        </div>
                                        <h3 class="movie-name">{{name}}</h3>
                                        <div class="movie-meta">
                                            <div class="rating">average rating: {{rating}}</div>
                                            <div class="genres">{{genres}}</div>
                                        </div>
                                    </a>
                                </div>
                            {{/each}}
                        </div>
                    </section>
                {{else if (eq searchType 'actors')}}
                    <section class="actor-results">
                        <h2>Actors ({{actors.length}})</h2>
                        <div class="actor-grid">
                            {{#each actors}}
                                <div class="actor-card" data-actor-name="{{name}}">
                                    <a href="/actors/{{name}}">
                                        <div class="actor-image">
                                            <img onerror="this.style.display='none'" src="/images/default-actor.jpg">
                                        </div>
                                        <h3 class="actor-name">{{name}}</h3>
                                        <div class="actor-meta">
                                            <div class="avg_rating">average rating: {{avg_rating}}</div>
                                        </div>
                                    </a>
                                </div>
                            {{/each}}
                        </div>
                    </section>
                {{/if}}
            </div>
        {{else}}
            <div class="no-results">
                <p>Nessun risultato trovato per "{{searchTerm}}"</p>
            </div>
        {{/if}}
    {{else}}
        <div class="search-instructions">
            <p>Inserisci un termine di ricerca per trovare film e attori</p>
        </div>
    {{/if}}
</main>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="/javascripts/search.js"></script>
</body>
</html>