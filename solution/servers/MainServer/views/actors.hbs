<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attori - Database Film</title>
    <link rel="stylesheet" href="/stylesheets/actors.css">
    <!-- per il secondo dropdown multiselezionabile-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
</head>
<body>
<main>
    <section class="filters-section">
        <div class="filter-group">
            <label>SORT BY:</label>
            <select id="sort-select">
                <option value="name_asc">NAME (A-Z)</option>
                <option value="name_desc">NAME (Z-A)</option>
                <option value="movies_count" >MOVIES COUNT</option>
                <option value="rating">RATING</option>
            </select>
        </div>

        <div class="filter-group">
            <label>FILTER BY GENRES:</label>
            <select class="genre-select" multiple="multiple">
                <option value="all" {{#unless selectedGenre}}selected{{/unless}}>ALL GENRES</option>
                <option value="Action">Action</option>
                <option value="Adventure">Adventure</option>
                <option value="Animation">Animation</option>
                <option value="Comedy">Comedy</option>
                <option value="Crime">Crime</option>
                <option value="Documentary">Documentary</option>
                <option value="Drama">Drama</option>
                <option value="Family">Family</option>
                <option value="Fantasy">Fantasy</option>
                <option value="History">History</option>
                <option value="Horror">Horror</option>
                <option value="Music">Music</option>
                <option value="Mystery">Mystery</option>
                <option value="Romance">Romance</option>
                <option value="Science Fiction">Science Fiction</option>
                <option value="Thriller">Thriller</option>
                <option value="TV Movie">TV Movie</option>
                <option value="War">War</option>
                <option value="Western">Western</option>
            </select>
            <button class="add-filter-btn" title="Aggiungi filtro">+</button>
        </div>
    </section>

<h1 class="title">TOP 500 ACTORS</h1>
    <section class="actors-grid" id="actors-container">
        {{#each actors      }}
            <div class="actor-card" data-actor-name="{{name}}">
                <a href="/actors/{{name}}">
                    <div class="actor-image">
                        <img onerror="this.style.display='none'" src="/images/default-actor.jpg">
                    </div>
                    <h3 class="actor-name">{{name}}</h3>
                    <div class="actor-meta">
                        <span class="movie-count">{{movies_count}} movies</span>
                        <span class="avg_rating">{{avg_rating}}</span>
                        <span>{{genres}}</span>
                    </div>
                </a>
            </div>
        {{/each}}
    </section>

        <div class="load-more-container">
            <button id="load-more" data-page="1">LOAD MORE</button>
        </div>
</main>

<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.4/axios.min.js"></script>
<script src="/javascripts/actors.js"></script>
</body>
</html>