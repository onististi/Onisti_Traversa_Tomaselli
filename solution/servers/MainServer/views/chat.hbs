<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cineverse - Chat</title>
    <link rel="stylesheet" href="/stylesheets/ChatStyle.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.1/socket.io.min.js"></script>
    <script src="/javascripts/chat.js" defer></script>
</head>
<body>
{{> header}}

<div class="content-container">
    <div class="sidebar">
        <h2>Film's Chat</h2>
        <ul class="film-list">
            {{#each filmList}}
                <li class="{{#if (eq this.filmId ../filmId)}}active{{/if}}">
                    <a href="/chat?filmCode={{this.code}}">
                    {{this.title}}
                    </a>
                </li>
            {{/each}}
        </ul>
    </div>

    <div class="chat-container">
        {{#if currentFilm}}
            <div class="chat-header">
                <h2>{{currentFilm.title}}'s chat</h2>
                <div id="connection-status" class="connection-status disconnected">Disconnesso</div>
            </div>

            <div class="chat-messages" id="chat-messages">
                {{#each messages}}
                    <div class="message">
                        <div class="message-username">{{this.sender.username}}</div>
                        <div class="message-text">{{this.content}}</div>
                        <div class="message-time">{{this.time}}</div>
                    </div>
                {{/each}}
            </div>

            <div class="chat-input">
                <input type="text" id="message-input"
                       placeholder="{{#if userId}}Scrivi un messaggio...{{else}}Accedi per partecipare{{/if}}"
                       {{#unless userId}}disabled{{/unless}}>
                <button id="send-button" {{#unless userId}}disabled{{/unless}}>Invia</button>
            </div>
        {{else}}
            <div class="no-film-selected">
                <p>Seleziona un film dalla sidebar per partecipare alla chat</p>
            </div>
        {{/if}}
    </div>
</div>

<script>
    window.chatData = {
        filmId: '{{filmId}}',
        userId: '{{userId}}',
        username: '{{username}}',
        dataServerUrl: '{{dataServerUrl}}'
    };
</script>
</body>
</html>